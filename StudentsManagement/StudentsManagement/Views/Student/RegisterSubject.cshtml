@model StudentsManagement.Models.RegisterSubject


@{
    Layout = null;
}

<!DOCTYPE html>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/ConfirmRegister.js"></script>
<script src="~/Scripts/CancelReg.js"></script>
<link href="/Content/bootstrap.css" rel="stylesheet">
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterSubject</title>

    <script type="text/javascript">
        function check() {
            if($('input[type="button"]').data("check").val()=="true")
            {
                $(':input[type="button"]').prop('disabled', true);
            } 
        }
        window.onload = check;
    </script>

</head>
<body>
    <h4>Register Subject</h4>
    <br />
    <label>Student ID - </label>  
    @*<input type="text" value="@Model.RegStudent.StudentID" name="StudentID" id="stdid" readonly class="form-control-static" size="1" />*@ 
    <span class="label label-primary" value="@Model.RegStudent.StudentID" name="StudentID" id="stdid" style="font-size:100%">@Model.RegStudent.StudentID</span>

    <label>Student Name</label> :  @Html.DisplayFor(model => model.RegStudent.StudentName)
    <div> 
        <table class="table">
            <tr>
               
                <th>
                    <label>Subject ID</label> 
                </th>
                <th>
                    <label>Subject Name</label> 
                </th>
                <th>
                    <label>Current Student Number</label> 
                </th>
                <th>
                    <label>Max</label> 
                </th>
                <th></th>
            </tr>

            @foreach (var item in @Model.RegSubjects)
            {
                <tr>

                   
                    <td>
                        @*<label class="idStudent">@item.StudentID</label>*@
                        @*@Html.DisplayFor(modelItem => @Model.Item2.SubjectID)*@
                        @*<input type="text" value="@item.SubjectID" name="SubjectID" id="subid" readonly class="form-control-static" size="1" />*@
                        <span class="label label-primary" value="@item.SubjectID" name="SubjectID" id="subid" style="font-size:100%" >@item.SubjectID</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectCurrentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectNumOfStudent)
                    </td>
                    
                    <td>
                                            
                        <input class ="sub" id="registerSubject" type="button" value="Register this subject" data-id="@item.SubjectID"  data-check="false" onclick="registerthisSubject($(this))" />
                                               
                    </td>
                </tr>
            }

        </table>
        <br />
        <a href='/Student/AddSubject' class="">Add New Subject</a>  |
         @Html.ActionLink("Back to List", "Index")
</div>
    
</body>
</html>
